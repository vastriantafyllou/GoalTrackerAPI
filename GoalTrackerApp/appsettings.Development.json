{
  "ConnectionStrings": {
    "DefaultConnection": "Server={DB_SERVER};Database={DB_NAME};User={DB_USER};Password={DB_PASS};MultipleActiveResultSets=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "localhost",
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": "587",
    "SenderEmail": "{EMAIL_SENDER}",
    "SenderName": "{EMAIL_SENDER_NAME}",
    "Username": "{EMAIL_USERNAME}",
    "Password": "{EMAIL_PASSWORD}"
  },
  "PasswordReset": {
    "TokenExpirationHours": 1,
    "MaxAttemptsPerTimeWindow": 3,
    "TimeWindowMinutes": 15,
    "FrontendResetUrl": "{FRONTEND_RESET_URL}"
  },
  "CaptchaSettings": {
    "Enabled": true,
    "SecretKey": "{CAPTCHA_SECRET_KEY}",
    "SiteKey": "{CAPTCHA_SITE_KEY}"
  },
  "AppSettings": {
    "LogoUrl": "https://res.cloudinary.com/datv9nvg4/image/upload/v1764890625/favicon_1_zerdbr.png?v=2",
    "AppUrl": "http://localhost:5173",
    "SupportUrl": "http://localhost:5173/support",
    "LoginUrl": "http://localhost:5173/login"
  },
  "Authentication": {
    "SecretKey": "{SECRET_KEY}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss} {Level:u3}] {Message:lj} {NewLine} {Exception}",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": null
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithAspnetCore"
    ]
  }
}
